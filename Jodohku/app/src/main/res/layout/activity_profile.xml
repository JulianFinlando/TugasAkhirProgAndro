<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="3dp"
    android:scrollbarThumbVertical="@drawable/vertical_scrollview_bg"
    android:scrollbarTrackVertical="@drawable/vertical_scrollview_line"
    tools:context=".ProfileActivity">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@color/graylight"
          android:orientation="vertical">

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="300dp">

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="350dp"
                  android:background="@drawable/gradientbgprofile"
                  android:orientation="vertical">

                  <ImageView
                      android:layout_width="130dp"
                      android:layout_height="130dp"
                      android:layout_gravity="center_horizontal"
                      android:layout_marginTop="40dp"
                      android:src="@drawable/kgb" />

                  <TextView
                      android:id="@+id/txvNama"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_horizontal"
                      android:layout_marginTop="10dp"
                      android:text="Mas Katon Gilang Bagaskara"
                      android:textColor="#fff"
                      android:textSize="21sp"
                      android:textStyle="bold" />

                  <Button
                      android:id="@+id/btnTambahTeman"
                      android:layout_width="wrap_content"
                      android:layout_gravity="center"
                      android:layout_height="wrap_content"
                      android:layout_alignParentBottom="true"
                      android:layout_centerHorizontal="true"
                      android:layout_marginBottom="20dp"
                      android:background="@drawable/buttonstylegradient"
                      android:text="Tambah Teman"
                      android:textColor="#fff" />

              </LinearLayout>



          </RelativeLayout>
          <LinearLayout
              android:layout_width="360dp"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_marginTop="25dp"
              android:orientation="vertical">

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:paddingLeft="25dp">

                  <ImageView
                      android:layout_width="36dp"
                      android:layout_height="36dp"
                      android:src="@drawable/ic_email_black_24dp" />

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_vertical"
                      android:paddingLeft="20dp"
                      android:text="katon.gilang@ti.ukdw.ac.id" />
              </LinearLayout>
          </LinearLayout>

          <LinearLayout
              android:layout_width="360dp"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_marginTop="25dp"
              android:orientation="vertical">

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:paddingLeft="25dp">

                  <ImageView
                      android:layout_width="36dp"
                      android:layout_height="36dp"
                      android:src="@drawable/ic_wc_black_24dp" />

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_vertical"
                      android:paddingLeft="20dp"
                      android:text="Laki - Laki" />
              </LinearLayout>
          </LinearLayout>

          <LinearLayout
              android:layout_width="360dp"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_marginTop="25dp"
              android:orientation="vertical">

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:paddingLeft="25dp">

                  <ImageView
                      android:layout_width="36dp"
                      android:layout_height="36dp"
                      android:src="@drawable/ic_umur" />

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_vertical"
                      android:paddingLeft="20dp"
                      android:text="21 tahun" />
              </LinearLayout>
          </LinearLayout>

          <LinearLayout
              android:layout_width="360dp"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_marginTop="25dp"
              android:orientation="vertical">

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:paddingLeft="25dp">

                  <ImageView
                      android:layout_width="36dp"
                      android:layout_height="36dp"
                      android:src="@drawable/ic_pekerjaan" />

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_vertical"
                      android:paddingLeft="20dp"
                      android:text="Programer IT Handal Expert Pro" />
              </LinearLayout>
          </LinearLayout>
          <LinearLayout
              android:layout_width="360dp"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_marginTop="25dp"
              android:orientation="vertical">

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:paddingLeft="25dp">

                  <ImageView
                      android:layout_width="36dp"
                      android:layout_height="36dp"
                      android:src="@drawable/ic_hobby" />

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_vertical"
                      android:paddingLeft="20dp"
                      android:text="Bermain Bola" />
              </LinearLayout>
              <Button
                  android:layout_gravity="right"
                  android:layout_marginTop="10dp"
                  android:layout_marginRight="20dp"
                  android:id="@+id/btnEditInfo"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:background="@drawable/buttonstyleblack"
                  android:text="Edit Info"
                  android:textColor="#fff" />
          </LinearLayout>
      </LinearLayout>
  </ScrollView>